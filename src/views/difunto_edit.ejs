<%- include("partials/_header") %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-5 offset-md-3 card bg-dark">
      <div class="card-body">
        <form action="/update/<%= difunto.id %>" method="POST">
          <input
            type="text"
            name="name"
            value="<%= difunto.name %>"
            placeholder="Nombre del difunto"
            class="form-control mb-3"
            oninput="this.value = this.value.toUpperCase();"
            autofocus
          />
          <input
            type="text"
            name="seccion"
            value="<%= difunto.seccion%>"
            placeholder="Sección de panteon"
            class="form-control mb-3"
            oninput="this.value = this.value.toUpperCase();"
          />
          <input
            type="text"
            name="fecha"
            value="<%= difunto.fecha%>"
            placeholder="Fecha de defunción"
            class="form-control mb-3"
          />

          <button type="submit" class="btn btn-primary">save customer</button>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include("partials/_footer") %>
