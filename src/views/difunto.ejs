<%- include("partials/_header") %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-7">
      <table class="table table-dark table-bordered table-hover">
        <thead>
          <tr>
            <td>N°</td>
            <td>Nombre</td>
            <td>Seccion</td>
            <td>Fecha</td>
            <td>Acciones</td>
          </tr>
        </thead>
        <tbody>
          <% if (difunto) { %> <% for(var i = 0; i < difunto.length; i++) {
          %>
          <tr>
            <td><%= (i + 1) %></td>
            <td><%= difunto[i].name %></td>
            <td><%= difunto[i].seccion %></td>
            <td><%= difunto[i].fecha %></td>
            <td class="d-flex gap-2">
              <a href="/update/<%= difunto[i].id %>" class="btn btn-info">
                Editar
              </a>
              <a href="/delete/<%= difunto[i].id %>" class="btn btn-danger">
                Borrar
              </a>
            </td>
          </tr>
          <% } %> <% } %>
        </tbody>
      </table>
    </div>
    <div class="col-md-5">
      <div class="card-body">
        <form action="/add" method="POST">
          <input
            type="text"
            name="name"
            placeholder="Nombre del difunto"
            class="form-control mb-2"
            autofocus
            oninput="this.value = this.value.toUpperCase();"
          />
          <input
            type="text"
            name="seccion"
            placeholder="Sección del panteon"
            class="form-control mb-2"
            oninput="this.value = this.value.toUpperCase();"
          />
          <input
            type="date"
            name="fecha"
            placeholder="Fecha de defunción"
            class="form-control mb-2"
          />

          <button type="submit" class="btn btn-success">Guardar difunto</button>
          <a href="/export-excel" class="btn btn-info">
            Exportar Excel
          </a>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include("partials/_footer") %>
